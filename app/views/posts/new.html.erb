<%= form_for :posts, url: posts_path, :html => { :multipart => true }  do |f| %>
    <div class="form-group">
        <div class="container-fluid">
            <div class="well objective-well footer-well">
                <h2 class="text-center">Create New Post</h2>
            <div class="row">
                <div class="col-md-4 col-md-offset-2">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>                
                </div>
                <div class="col-md-4">
                    <%= f.label :topic %>
                    <%= f.select :topic, ['Events', 'Ideas', 'Suggestions'], {}, class: 'form-control' %>
                </div>                
            </div>
            <br>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <%= f.label :body %>
                    <%= f.text_area :body, class: 'form-control' %>                
                </div>
            </div>
            <br>
            <div class="row text-center">
                <%= f.submit "Create Post", class:'btn btn-success' %>
            </div>
            
            </div>
        </div>
    </div>    
<% end %>