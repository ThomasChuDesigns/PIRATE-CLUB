<div class="jumbotron hacked text-center">
    <h2>Posts</h2>
    <p>view the discussion of the pirate club here!</p>
    <% if user_signed_in? %>
        <%= link_to "Create A Post", new_post_path, class:'btn btn-success btn-hacked' %>
    <% end %>
</div>
<br>
<div class="container-fluid">
    <div class="row">
        <h2 class="text-center"><span class="label label-danger">EVENTS</span></h2>
        <br>
        <% @post.each do |post| %>
            <% if post.topic == "Events" %>
                <div class="col-md-4">
                    <div class="well objective-well post-well">
                            <h2>
                                <%= link_to post.title, post %>
                            </h2>
                            <p><%= post.created_at.strftime("%B, %d, %Y") %></p>
                            <% if current_user.rank_id == 1 || current_user.rank_id == 2 %>
                                <%= link_to "Edit Post", edit_posts_path(post), method: :get %>
                                <%= link_to "Delete Post", destroy_posts_path(post), method: :delete %>
                            <% end %>
                    </div>
                </div>              
            <% end %>
        <% end %>        
    </div>
    <br>
    <div class="row">
        <h2 class="text-center"><span class="label label-primary">IDEAS</span></h2>
        <br>
        <% @post.each do |post| %>
            <% if post.topic == "Ideas" %>
                <div class="col-md-4">
                    <div class="well objective-well post-well">
                            <h2>
                                <%= link_to post.title, post %>
                            </h2>
                            <p><%= post.created_at.strftime("%B, %d, %Y") %></p>
                    </div>
                </div>              
            <% end %>        
        <% end %>        
    </div>
    <br>
    <div class="row">
        <h2 class="text-center"><span class="label label-warning">SUGGESTIONS</span></h2>
        <br>
        <% @post.each do |post| %>
            <% if post.topic == "Suggestions" %>
                <div class="col-md-4">
                    <div class="well objective-well post-well">
                            <h2>
                                <%= link_to post.title, post %>
                            </h2>
                            <p><%= post.created_at.strftime("%B, %d, %Y") %></p>
                    </div>
                </div>              
            <% end %>        
        <% end %>        
    </div>
    
</div>