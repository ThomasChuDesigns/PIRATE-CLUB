
            <%= form_for @post do |f| %>
                <div class="row">
                    <div class="col-md-4 col-md-offset-2">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: 'form-control' %>                
                    </div>
                    <% if current_user.rank_id == 1 || current_user.rank_id == 2 %>
                        <div class="col-md-4">
                            <%= f.label :topic %>
                            <%= f.select :topic, ['Events', 'Ideas', 'Suggestions'], {}, class: 'form-control' %>
                        </div>                  
                    <% else %>
                        <div class="col-md-4">
                            <%= f.label :topic %>
                            <%= f.select :topic, ['Suggestions'], {}, class: 'form-control' %>
                        </div>  
                    <% end %>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <%= f.label :body %>
                        <%= f.text_area :body, class: 'form-control' %>                
                    </div>
                </div>
                <br>
                <div class="row text-center">
                    <%= f.submit "Create Post", class:'btn btn-success' %>
                </div>
                
        <% end %>